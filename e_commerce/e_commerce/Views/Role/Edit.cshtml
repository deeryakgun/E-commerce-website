@model e_commerce.Dto.RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rol Güncelleme Sayfası</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <h1>Rol Güncelleme Sayfası</h1>
        <form id="updateForm" method="post" asp-controller="Role" asp-action="Edit">
            <div class="form-group">
                <label for="name">Rol Başlığı</label>
                <input type="text" id="name" name="name" class="form-control" value="@Model.name" />
            </div>
           
            <button type="submit" class="btn btn-outline-info col-12">Güncelle</button>
        </form>
        <div id="message" class="mt-3"></div>
    </div>

    <script>$(document).ready(function () {
            $('#updateForm').on('submit', function (event) {
                event.preventDefault(); // Formun normal şekilde gönderilmesini engelle

                $.ajax({
                    url: $(this).attr('action'), // Formun action URL'sini al
                    type: 'POST', // POST yöntemi kullan
                    data: $(this).serialize(), // Form verilerini serileştir
                    success: function (response) {
                        // Başarılı olduğunda
                        $('#message').html('<div class="alert alert-success">Rol başarıyla güncellendi!</div>');
                    },
                    error: function (xhr) {
                        // Hata olduğunda
                        $('#message').html('<div class="alert alert-danger">Rol güncellenirken bir hata oluştu.</div>');
                    }
                });
            });
        });</script>
</body>
</html>
