@model e_commerce.Dto.AppUserEditDto

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullanıcı Bilgilerim</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="UserDetails" asp-controller="HomeController">
            <div class="form-group">
                <input asp-for="FirstName" placeholder="Adınız" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="LastName" placeholder="Soyadınız" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Email" placeholder="Email Adresiniz" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="City" placeholder="Şehir" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Şifre" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Şifre Tekrar" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Değiştir" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>
